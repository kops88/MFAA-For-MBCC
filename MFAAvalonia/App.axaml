<Application
    RequestedThemeVariant="Light"
    x:Class="MFAAvalonia.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:sukiUi="clr-namespace:SukiUI;assembly=SukiUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
    xmlns:converters="clr-namespace:MFAAvalonia.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://MFAAvalonia/Assets/Style/Geometry.axaml" />
                <ResourceInclude Source="avares://MFAAvalonia/Assets/Style/MdXaml.axaml" />
                <ResourceInclude Source="avares://MFAAvalonia/Views/UserControls/TooltipBlock.axaml" />
                <ResourceInclude Source="avares://MFAAvalonia/Views/UserControls/DisplayIcon.axaml" />
                <ResourceInclude Source="avares://MFAAvalonia/Views/UserControls/SchedulePicker.axaml" />
                <ResourceInclude Source="avares://MFAAvalonia/Views/UserControls/MarqueeTextBlock.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceInclude Source="avares://MFAAvalonia/Assets/Theme/LightTheme.axaml" x:Key="Light" />
                <ResourceInclude Source="avares://MFAAvalonia/Assets/Theme/DarkTheme.axaml" x:Key="Dark" />
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme />
        <styling:FluentAvaloniaTheme />
        <sukiUi:SukiTheme ThemeColor="Blue" />
        <StyleInclude Source="avares://MFAAvalonia/Views/UserControls/HotKeyEditor.axaml" />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

        <Style Selector="Thumb.DashboardGridSplitter">
            <Setter Property="Cursor" Value="SizeWestEast" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Background="Transparent" RowDefinitions="*,Auto,*">
                        <Border Width="1"
                                Background="{DynamicResource SukiControlBorderBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Stretch"
                                Margin="0,4" />
                        <StackPanel Grid.Row="1"
                                    Spacing="4" Margin="0 10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Ellipse Width="4" Height="4" Fill="{DynamicResource SukiControlBorderBrush}" />
                            <Ellipse Width="4" Height="4" Fill="{DynamicResource SukiControlBorderBrush}" />
                            <Ellipse Width="4" Height="4" Fill="{DynamicResource SukiControlBorderBrush}" />
                        </StackPanel>
                        <Border Grid.Row="2"
                                Width="1"
                                Background="{DynamicResource SukiControlBorderBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Stretch"
                                Margin="0,4" />
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="Thumb.DashboardGridSplitterHorizontal">
            <Setter Property="Cursor" Value="SizeNorthSouth" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Background="Transparent" ColumnDefinitions="*,Auto,*">
                        <Border Height="1"
                                Background="{DynamicResource SukiControlBorderBrush}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Margin="4,0" />
                        <StackPanel Grid.Column="1"
                                    Spacing="4" Margin="10,0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Ellipse Width="4" Height="4" Fill="{DynamicResource SukiControlBorderBrush}" />
                            <Ellipse Width="4" Height="4" Fill="{DynamicResource SukiControlBorderBrush}" />
                            <Ellipse Width="4" Height="4" Fill="{DynamicResource SukiControlBorderBrush}" />
                        </StackPanel>
                        <Border Grid.Column="2"
                                Height="1"
                                Background="{DynamicResource SukiControlBorderBrush}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Margin="4,0" />
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

    </Application.Styles>
</Application>